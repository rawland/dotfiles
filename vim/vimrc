" Change background with F6
function! ToggleBackgroundColor()
  if (&background == 'light')
    set background=dark
    echo "background -> dark"
  else
    set background=light
    echo "background -> light"
  endif
endfunction
map <F6>  :call ToggleBackgroundColor()<CR>

